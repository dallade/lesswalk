<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoreViewsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textColor="#333333"
            android:background="#e6d700"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                >

                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:layout_margin="5dp"
                    android:textStyle="italic|bold"
                    android:text="Login"
                    />

                <Button
                    android:id="@+id/btnHoverFamily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:layout_margin="5dp"
                    android:text="Add Family"
                    />

                <Button
                    android:id="@+id/btnHoverWatch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:layout_margin="5dp"
                    android:text="Watch out"
                    />

                <Button
                    android:id="@+id/btnHoverHttpClient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:layout_margin="5dp"
                    android:text="Http Client"
                    />

            </LinearLayout>

        </HorizontalScrollView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Text View"
            android:textColor="#333333"
            android:background="#0099e6"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Text View"
            android:textColor="#333333"
            android:background="#00e63d"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Text View"
            android:textColor="#333333"
            android:background="#e60000"
            />

    </LinearLayout>

    <include
        android:id="@+id/hover_add_family"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        layout="@layout/layout_add_family"
        />

    <include
        android:id="@+id/hover_watch_out_from"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        layout="@layout/layout_watch_out_from" />

    <include
        android:id="@+id/hover_http_client"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        layout="@layout/layout_http_client" />


</RelativeLayout>
