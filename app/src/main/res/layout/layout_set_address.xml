<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#cce9e9e9"
            android:columnCount="2"
            android:paddingBottom="20dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:paddingTop="80dp"
            android:rowCount="6"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Country:"
        />

    <EditText
        android:id="@+id/editor_manual_text_get_country_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Israel"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:text="City:"
        />

    <EditText
        android:id="@+id/editor_manual_text_get_city_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Street:"
        />

    <EditText
        android:id="@+id/editor_manual_text_get_street_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Street Num:"
        />

    <EditText
        android:id="@+id/editor_manual_text_get_street_num_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        />

    <Button
        android:id="@+id/editor_manual_text_done_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_marginTop="30dp"
        android:paddingEnd="30dp"
        android:paddingStart="30dp"
        android:layout_gravity="center"
        android:text="Done"
        />

</GridLayout>


