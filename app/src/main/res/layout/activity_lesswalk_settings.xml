<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_1_1x"
    tools:context="com.lesswalk.LesswalkSettings">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/profile_header_2x"
        android:scaleType="fitStart"
        android:contentDescription="@string/hello_world"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="70dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:src="@drawable/settings_snapshot"
                android:scaleType="fitCenter"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Your Name Goes HERE!"
                android:textSize="24dp"
                android:gravity="center"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_centerVertical="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/contact_profile_visit_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text=" Default Navigator "
                    android:textColor="#FFFFFF" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/contact_profile_visit_tv"
                    android:background="#FFFFFF" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/contact_profile_visit_tv"
                    android:background="#FFFFFF" />
            </RelativeLayout>

            <com.lesswalk.views.SettingsNavigationItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Waze"
                />

            <com.lesswalk.views.SettingsNavigationItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Google Map"
                />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
