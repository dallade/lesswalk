<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  	android:id="@+id/contact_profile_menu_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#80404040"
    >
    
    <RelativeLayout
        android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="6"
        />
    
    <RelativeLayout
        android:id="@+id/contact_profile_menu_area"
        android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="3"
    	android:padding="5dp"
        >
        
        <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical"
		    android:weightSum="4.3"
		    android:background="@drawable/rounded_corners_white"
		    >

			<TextView
				android:id="@+id/contact_profile_menu_title"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:background="@drawable/rounded_corners_white"
				/>
			<TextView
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="0.1"
				android:background="#808080"
				/>
		    
            <Button
                android:id="@+id/contact_profile_menu_invite"
                android:layout_width="match_parent"
		    	android:layout_height="0dp"
		    	android:layout_weight="1"
		    	android:text="Invite"
		    	android:background="@drawable/rounded_corners_white"
                />
            <TextView
                android:layout_width="match_parent"
		    	android:layout_height="0dp"
		    	android:layout_weight="0.1"
		    	android:background="#808080"
                />
            <Button
				android:id="@+id/contact_profile_menu_share"
                android:layout_width="match_parent"
		    	android:layout_height="0dp"
		    	android:layout_weight="1"
		    	android:text="Share"
		    	android:background="@drawable/rounded_corners_white" 
                />
            <TextView 
                android:layout_width="match_parent"
		    	android:layout_height="0dp"
		    	android:layout_weight="0.1"
		    	android:background="#808080"
                />
            <Button
				android:id="@+id/contact_profile_menu_edit"
                android:layout_width="match_parent"
		    	android:layout_height="0dp"
		    	android:layout_weight="1"
		    	android:text="Edit"
		    	android:background="@drawable/rounded_corners_white"
                />
         </LinearLayout>
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="1"
    	android:padding="5dp"
        >
        
        <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical"
		    android:background="@drawable/rounded_corners_white"
		    >
		    
            <Button
                android:id="@+id/contact_profile_menu_cancel"
                android:layout_width="match_parent"
		    	android:layout_height="match_parent"
		    	android:text="Cancel"
		    	android:background="@drawable/rounded_corners_white"
                />
         </LinearLayout>
       
    </RelativeLayout>

</LinearLayout>
